{
    "name": "Komga",
    "id": "komga",
    "packaging_format": 1,
    "description": {
        "en": "Media server for your comics, manga and magazines",
        "fr": "Serveur multimédia pour vos bandes dessinées, mangas et magazines"
    },
    "version": "0.87.4~ynh1",
    "url": "https://komga.org",
    "multi_instance": true,
    "license": "MIT",
    "maintainer": {
        "name": "Navan Chauhan",
        "email": "navanchauhan@gmail.com",
        "url": "https://navan.dev"
    },
    "requirements": {
        "yunohost": ">= 4.2.4"
    },
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/komga",
                "default": "/komga"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            }
        ]
    }
}
