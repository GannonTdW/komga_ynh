{
    "name": "Komga",
    "id": "komga",
    "packaging_format": 1,
    "description": {
        "en": "Media server for your comics, manga and magazines",
        "fr": "Serveur multimédia pour vos bandes dessinées, mangas et magazines"
    },
    "version": "0.75.1~ynh2",
    "url": "https://komga.org",
    "license": "MIT",
    "maintainer": {
        "name": "Navan Chauhan",
        "email": "navanchauhan@gmail.com",
        "url": "https://navan.dev"
    },
    "requirements": {
        "yunohost": ">= 4.1.3"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Komga",
                    "fr": "Choisissez un nom de domaine pour Komga"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Komga",
                    "fr": "Choisissez un chemin pour Komga"
                },
                "example": "/komga",
                "default": "/komga"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            }
        ]
    }
}
